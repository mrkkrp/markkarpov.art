<figure>
  <img src="/static/img/art/{{ id }}.png"
       alt="{{ date }} {{ title }}"
       class="img-fluid"
       loading="lazy">
  <figcaption>
    {{ date }}
    &sdot;
    {{# title }}{{ . }}{{/ title }}
    {{^ title }}Untitled{{/ title }}
    {{# height }}
    &sdot;
    {{ height }} &times; {{ width }} cm
    {{/ height }}
    &sdot;
    {{ medium }}
    <br>
    {{# description }}
    {{ . }}
    {{/ description }}
  </figcaption>
</figure>
