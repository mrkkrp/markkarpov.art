<figure>
  <img src="/static/img/art/{{ id }}.png" alt="{{ date }} {{ title }}" class="img-fluid">
  <figcaption>
    {{ date }}
    {{# title }}
    {{ . }}
    {{/ title }}
    {{^ title }}
    Untitled
    {{/ title }}
    &sdot; {{ height }} &times; {{ width }} cm,
    {{ medium }}
    <br>
    {{# description }}
    {{ . }}
    {{/ description }}
  </figcaption>
</figure>
